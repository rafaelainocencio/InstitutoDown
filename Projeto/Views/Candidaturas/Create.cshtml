@model Projeto.Models.Candidatura

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Candidatura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Empresa" class="control-label"></label>
                <select asp-for="IdEmpresa" class ="form-control" asp-items="ViewBag.IdEmpresa"></select>
            </div>
            <div class="form-group">
                <label asp-for="Curso" class="control-label"></label>
                <select asp-for="IdCurso" class ="form-control" asp-items="ViewBag.IdCurso"></select>
            </div>
            <div class="form-group">
                <label asp-for="Vaga" class="control-label"></label>
                <select asp-for="IdVaga" class ="form-control" asp-items="ViewBag.IdVaga"></select>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class="control-label"></label>
                <select asp-for="IdUsuario" class ="form-control" asp-items="ViewBag.IdUsuario"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" onclick=Efetuado() />
                <script>
                    function Efetuado() {
                        if (Efetuado == "") {
                            alert("Preencha todos os campos");
                            return;
                       
                   
                        }
                        else {
                            alert("Candidatura efetuada");
                        }
                    }
                </script>
               
            </div>
            


        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
