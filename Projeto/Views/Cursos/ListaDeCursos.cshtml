@model IEnumerable<Projeto.Models.Curso>
@{
    ViewData["Title"] = "ListaDeVagas";
}

<div class="container">
    <h2 class="d-flex justify-content-center">Nossos Cursos:</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @{
            foreach (var item in Model)
            {
                <div class="col m-5">
                    <div class="card">
                        <img src="~/lib/Imagens/@item.Imagem" class="card-img-top" alt="..." width="300px">
                        <div class="card-body ">
                            <h5 class="card-title">@item.Nome</h5>
                            <p class="card-text">@item.Descricao</p>
                            <a asp-controller="Matriculas" asp-action="Matricular" class="btn btn-primary">Matricular-se</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
